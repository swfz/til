{
  "include": ["./src/**/*", "gatsby-node.ts", "gatsby-config.ts", "gatsby-browser.tsx"],
  "exclude": ["node_modules", "functions/**/*"],
  "compilerOptions": {
    "target": "ESNext",
    "module": "commonjs",
    "jsx": "react",
    "allowJs": true,
    "checkJs": true,
    "declaration": false,
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "types": ["node", "vitest/globals"]
  }
}
