{
  "include": ["./src/**/*", "gatsby-*.ts"],
  "exclude": ["node_modules"],
  "compilerOptions": {
    "target": "ES2017",
    "module": "commonjs",
    "jsx": "react",
    "declaration": false,
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "types": ["jest"],
    "typeRoots": ["types/", "./node_modules/@types"]
  }
}
